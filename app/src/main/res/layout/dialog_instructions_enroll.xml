<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:paddingEnd="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/instruccion_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/instruccion_titulo"

            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="5"
        tools:ignore="UselessLeaf">

        <ImageView
            android:id="@+id/instruccion_img_iluminacion"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="4"

            android:contentDescription="@string/instruccion_img_iluminacion"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/White"
            app:srcCompat="@drawable/idea" />

        <TextView
            android:id="@+id/instruccion_iluminacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/instruccion_iluminacion"
            android:textColor="@color/White"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="5"
        tools:ignore="UselessLeaf">

        <ImageView
            android:id="@+id/instruccion_img_lentes"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:contentDescription="@string/instruccion_img_lentes"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/White"
            app:srcCompat="@drawable/lentes" />

        <TextView
            android:id="@+id/instruccion_lentes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/instruccion_lentes"
            android:textColor="@color/White"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="5"
        tools:ignore="UselessLeaf">

        <ImageView
            android:id="@+id/instruccion_img_distancia"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:contentDescription="@string/instruccion_img_distancia"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:tint="@color/White"
            app:srcCompat="@drawable/espacio" />

        <TextView
            android:id="@+id/instruccion_distancia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/instruccion_distancia"
            android:textColor="@color/White"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="5"
        tools:ignore="UselessLeaf">

        <ImageView
            android:id="@+id/instruccion_img_pestaniear"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="4"
            android:contentDescription="@string/instruccion_img_pestaniear"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:tint="@color/White"
            app:srcCompat="@drawable/vision" />

        <TextView
            android:id="@+id/instruccion_pestaniear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/instruccion_pestaniear"
            android:textColor="@color/White"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_enrollment_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:shadowColor="#FFFFFF"
            android:text="@string/instruccion_chck_disipar"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textCursorDrawable="?android:attr/windowBackground"
            app:buttonTint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_continue_dialog_enroll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/instruccion_btn_continuar"
            app:backgroundTint="#B74A4949" />
    </LinearLayout>

</LinearLayout>